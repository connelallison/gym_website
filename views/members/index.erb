<h2 class="member-title">Member Directory</h2>

<% @members.each() { |member| %>
  <p>Name: <%= member.name() %></p>
  <p>Membership status:
    <% if (member.premium() == true) %>
    Premium
    <% elsif (member.premium() == false) %>
    Standard
    <% end %>
  </p>
  <p>Lessons: <%=member.lessons.count()%></p>
  <hr/>
  <div class="buttons">
    <form action="/gym/members/<%=member.id()%>" method="get">
      <input class="button" type="submit" value="View member">
    </form>
    <form action="/gym/members/<%=member.id()%>/edit" method="get">
      <input class="button edit" type="submit" value="Edit member">
    </form>
    <form action="/gym/members/<%=member.id()%>/delete" method="post">
      <input class="button delete" type="submit" value="Delete member">
    </form>
  </div>

  <hr/>
<%}%>
