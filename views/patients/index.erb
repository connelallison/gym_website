<h2 class="patient-title">Patient Directory</h2>

<% @patients.each() { |patient| %>
  <p>Name: <%= patient.patient_name() %></p>
  <p>Membership:
    <% if patient.membership %>
      <% if (patient.premium() == true) %>
        Premium
      <% elsif (patient.premium() == false) %>
        Standard
      <% end %>
      (ID: <%= patient.member_id %>)
    <% else %>
    None
    <% end %>
  </p>
  <p>Current conditions: <%=patient.current_conditions.count()%></p>
  <hr/>
  <div class="buttons">
    <form action="/wellbeing/patients/<%=patient.id()%>" method="get">
      <input class="button" type="submit" value="View this patient">
    </form>
    <form action="/wellbeing/patients/<%=patient.id()%>/edit" method="get">
      <input class="button edit" type="submit" value="Edit this patient">
    </form>
    <form action="/wellbeing/patients/<%=patient.id()%>/delete" method="post">
      <input class="button delete" type="submit" value="Delete this patient">
    </form>
  </div>

  <hr/>
<%}%>
