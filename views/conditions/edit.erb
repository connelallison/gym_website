<h3>Edit condition:</h3>
<br>

<form action="/wellbeing/conditions/<%=@condition.id()%>" method="post" autocomplete="off">
  <p>Patient name: <%=@condition.patient.patient_name%></p>
  <input type="hidden" name="patient_id" value="<%=@condition.patient.id%>">
  <label for="physio_id">Physio:</label>
  <select name="physio_id">
    <% @physios.each() { |physio| %>
    <option <% if (@condition.physio_id == physio.id) %> selected <%end%>value="<%=physio.id%>"><%=physio.physio_name%></option>
  <% } %>
  </select>
  <input type="text" name="type" value="<%=@condition.type%>">
  <label for="diagnosed">Date diagnosed:</label>
  <input type="date" name="diagnosed" value="<%=@condition.diagnosed%>">
  <input type="submit" value="Update condition">
</form>

<br>
<p><a class="return" href="/wellbeing/patients/<%=@condition.patient_id%>">Return</a> to patient.</p>
<p><a class="return" href="/wellbeing/physios/<%=@condition.physio_id%>">Return</a> to physio.</p>
